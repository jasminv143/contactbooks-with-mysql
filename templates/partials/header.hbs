<body>
	<div class="flude-container">
		<div class="row ">
			<ul class="topnav">
				{{#if user}}
					<li><a class="nav-link {{isActive currentUrl '/profile'}}"  href="{{removeHref currentUrl '/profile'}}" id="index">Welcome {{#if user}} {{ user.username }} {{else}}User {{/if}}</a></li>
					<li><a class="nav-link {{isActive currentUrl '/home'}}" href="{{removeHref currentUrl '/home'}}" id="indexone">HOME</a></li>
					<li><a class="nav-link {{isActive currentUrl '/contactform'}}" href="{{removeHref currentUrl '/contactform'}}" id="add" >ADD CONTACT</a></li>
					<li class="right"> <a class="nav-link" id="logout"  href="javascript:void(0);" onclick="confirmLogout()" >Logout</a> </li>
				{{else}}
					<li class="right">
						<a class="nav-link {{isActive currentUrl '/login'}}" id="logout"  href="{{removeHref currentUrl '/login'}}">Login</a>
					</li>
				{{/if}}
				</li>
				<li class="right">
					<a href="javascript:void(0);" id='ct6' class="" ></a>
				</li>
			</ul>
		</div>
	</div>  
	{{#if successMessage}}
		<div class="mt-1" >
			<div class="alert alert-success" id="successalert" role="alert">
				{{successMessage}}
			</div>
		</div> 
	{{/if}}
	{{#if errorMessage}}
		<div class="mt-1" >
			<div class="alert alert-danger" id="dangeralert" role="alert">    
				{{errorMessage}}
			</div>	
		</div> 
	{{/if}}
	
